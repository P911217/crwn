{
  "name": "crwn-server",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^13.6.0",
    "npm": "^6.13.4",
    "yarn": "^1.21.1"
  },
  "proxy": "http://localhost/5000",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon --exec babel-node server.js",
    "build": "babel server.js -d dist && cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node dist/server.js",
    "test": "cd client && npm install && npm install && npm run test",
    "heroku-postbuild": "npm run build && cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.16.4",
    "stripe": "6.28.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "concurrently": "^4.0.1",
    "nodemon": "^1.19.1"
  }
}